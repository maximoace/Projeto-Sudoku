public static boolean VerificaLinhaColunaGrade (int[][] matriz, int linha, int coluna, int numero) {

// esse numero ta na linha?
for (int i = 0; i < matriz[0].length; i++) {
if (matriz[linha][i] == numero)
return false;
}
// esse numero estÃ¡ na coluna?
for (int i = 0; i < matriz.length; i++) {
if (matriz[i][coluna] == numero)
return false;
}

// verifica a grade
int gradeLinha = linha - linha % 3;
int gradeColuna = coluna - coluna % 3;

for (int i = 0; i < 3; i++) {
for (int j = 0; j < 3; j++) {
if (matriz[gradeLinha + i][gradeColuna + j] == numero)
return false;
}
}

// tudo ok
return true;
}
